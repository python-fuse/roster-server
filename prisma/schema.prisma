generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model User {
  id            String         @id @unique @default(uuid())
  name          String
  email         String         @unique
  password      String
  role          Role           @default(STAFF)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  DutyRoster    DutyRoster[]
  assignment    Assignment[]
  notifications Notification[]
  assigned      Assignment[]   @relation("AssignedBy")
}

model DutyRoster {
  id    String   @id @default(uuid())
  date  DateTime
  shift Shift

  addedById String

  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  createdBy  User         @relation(fields: [addedById], references: [id])
  assignment Assignment[]

  @@unique([date, shift])
}

model Assignment {
  id           String @id @default(uuid())
  dutyRosterId String
  userId       String
  assignedById String

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  dutyRoster DutyRoster @relation(fields: [dutyRosterId], references: [id])
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignedBy User       @relation("AssignedBy", fields: [assignedById], references: [id])

  @@unique([userId, dutyRosterId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

enum Role {
  ADMIN
  STAFF
  SUPERVISOR
}

enum Shift {
  MORNING
  EVENING
  NIGHT
}
