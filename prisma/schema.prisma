generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model User {
  id         String       @id @unique @default(uuid())
  name       String
  email      String       @unique
  password   String
  role       Role         @default(STAFF)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  DutyRoster DutyRoster[]
  assignment Assignment[]
}

model DutyRoster {
  id    String   @id @default(uuid())
  date  DateTime @unique
  shift Shift

  addedById String

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  createdBy  User        @relation(fields: [addedById], references: [id])
  assignment Assignment?
}

model Assignment {
  id           String @id @default(uuid())
  dutyRosterId String @unique
  userId       String
  assignedById String

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  dutyRoster DutyRoster @relation(fields: [dutyRosterId], references: [id])
  user       User       @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

enum Role {
  ADMIN
  STAFF
  SUPERVISOR
}

enum Shift {
  MORNING
  EVENING
  NIGHT
}
