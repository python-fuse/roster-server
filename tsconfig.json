{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,

    /* Required to point to the type definitions */
    "typeRoots": ["./src/@types", "node_modules/@types"],

    /*  Required to include the type definitions */
    "types": ["node", "express", "express-session"],

    "strict": true,
    "skipLibCheck": true
  }
}
